{% if content %}
  <div {{ attributes.addClass('two-column') }}>
  {% if content.main %}
    <div {{ region_attributes.main.addClass('main-region', 'grid-area-a') }}>
      {{ content.main }}
    </div>
  {% endif %}
  {% if content.sidebar %}
    <div {{ region_attributes.sidebar.addClass('sidebar-region', 'grid-area-b') }}>
      {{ content.sidebar }}
    </div>
  {% endif %}
  </div>
{% endif %}
